#!/bin/bash
# Compilador LaTeX simplificado
# Uso: ./compile [directorio]
# Ejemplo: ./compile clase01

if [ $# -eq 0 ]; then
    # Si no se proporciona directorio, usar el actual
    python3 "$(dirname "$0")/compile_latex.py" .
else
    # Usar el directorio proporcionado
    python3 "$(dirname "$0")/compile_latex.py" "$1"
fi
